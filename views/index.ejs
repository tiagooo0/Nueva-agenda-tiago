<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="icon" href="/img/logo.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="/style/style.css">
</head>
<body>
  <h1>TITULO</h1>
  <!-- form -->
  <div id="formEvento" class="modal-body d-flex">
    <div class="justify-content-start">
      <form action="/eventos" method="POST" id="newForm">
        <div class="d-flex">
          <input type="text" class="form-control" id="titulo" name="titulo">
          <button type="submit" class="btn btn-primary" id="buttonGuardar">Guardar</button>
        </div>
        <div class="d-flex">
          <label id="date" for="date"> Hora:</label>
          <input type="date" class="form-control" id="date" name="date">
        </div>
      </form>
    </div>
  </div>

  <% eventos.forEach((Evento) => { %>
  <div id="tareas" class="input-group ">
    <input type="text" class="form-control" value="<%= Evento.titulo %>" readonly>
    <div class="input-group-append">
      <span class="input-group-text">
        <% const formattedDate = new Date(Evento.date).toLocaleString([], { month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }); %>
        <%= formattedDate %>
      </span>
    </div>
    <form action="/delEvento/<%= Evento.titulo %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-danger" type="submit">X</button>
    </form>
  </div>
<% }) %>


  <script src="/script/client.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
